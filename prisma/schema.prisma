generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model UrlRedirects {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  url       String
  redirect  String   @unique(map: "unique_redirect")
  Visit     Visit[]
  userEmail String
}

model Visit {
  id           String       @id @default(uuid())
  urlId        String
  UrlRedirects UrlRedirects @relation(fields: [urlId], references: [id], onDelete: Cascade)
}
