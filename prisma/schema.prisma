generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model UrlRedirects {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  url       String
  redirect  String   @unique(map: "unique_redirect")
  Visit     Visit[]
  userId    String
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Visit {
  id           String       @id @default(uuid())
  urlId        String
  UrlRedirects UrlRedirects @relation(fields: [urlId], references: [id], onDelete: Cascade)
}

model Account {
  id                String  @id
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  User              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id
  sessionToken String   @unique
  userId       String
  expires      DateTime
  User         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String         @id
  name          String?
  email         String?        @unique
  emailVerified DateTime?
  image         String?
  Account       Account[]
  Session       Session[]
  UrlRedirects  UrlRedirects[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
